<html>
    <head>
        <style>
          * {
              box-sizing: border-box;
          }
          html, body {
              margin: 0px;
              padding: 0px;
          }
          .main {
              display: flex;
              flex-direction: column;
              justify-content: space-between;
              width: 100%;
              height: 100%;
          }
          .header {
              width: 100%;
              padding-top: 0;
          }
          .footer {
              width: 100%;
              padding-bottom: 20px;
              padding-left: 20px;
          }
        </style>
    </head>
    <body>
        {{#each $pdf.pages}}
          {{#if @index}}
            <div style="page-break-before: always;"></div>
          {{/if}}
          <main class="main">
            <header class="header">
             
            </header>
            <footer class="footer">
                <span>Страница {{getPageNumber @index}}</span>
            </footer>
          </main>
        {{/each}}
    </body>
</html>
